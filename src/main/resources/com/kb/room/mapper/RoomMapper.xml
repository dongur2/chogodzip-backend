                         ON r.ROOM_ID = s.ROOM_ID
        WHERE r.ROOM_ID = #{roomId}
    </select>
    <select id="selectOnetwoRoomByRoomId" resultType="com.kb.room.dto.response.detail.GosiwonInfoDTO" parameterType="Long">
        SELECT r.*, o.*
        FROM ROOM r JOIN ONETWOROOM o
                         ON r.ROOM_ID = o.ROOM_ID
        WHERE r.ROOM_ID = #{roomId}
    </select>

    <!--  관심매물 개수 카운트  -->
    <select id="getInterestedCountByRoomId" resultType="java.lang.Integer">
        SELECT count(*) FROM INTEREST_ROOM WHERE ROOM_ID = #{roomId}
    </select>

    <!--  로그인한 유저의 해당 매물에 대한 관심매물 확인  -->
    <select id="checkInterestedByRoomIdAndUserId" resultType="java.lang.Boolean">
        SELECT EXISTS(
            SELECT 1 FROM INTEREST_ROOM WHERE USER_ID = #{userId} AND ROOM_ID = #{roomId}
        )
    </select>

    <!--  관심매물 등록  -->
    <insert id="insertInterest">
        INSERT INTO INTEREST_ROOM VALUES(default, #{userId}, #{roomId}, default)
    </insert>

    <!--  관심매물 삭제  -->
    <delete id="deleteInterest">
        DELETE FROM INTEREST_ROOM WHERE USER_ID = #{userId} AND ROOM_ID = #{roomId}
    </delete>


