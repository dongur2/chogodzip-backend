        FROM ONETWOROOM o INNER JOIN ROOM r ON o.ROOM_ID = r.ROOM_ID
        WHERE r.ADDRESS IS NOT NULL AND r.ADDRESS LIKE CONCAT('%', #{gu}, '%');
    </select>


