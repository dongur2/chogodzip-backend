    </select>

    <!--  매물 상세 정보 조회  -->
    <select id="selectGosiwonByRoomId" resultType="com.kb.room.dto.response.detail.GosiwonInfoDTO" parameterType="Long">
        SELECT r.*, g.*
        FROM ROOM r JOIN GOSIWON g
        ON r.ROOM_ID = g.ROOM_ID
        WHERE r.ROOM_ID = #{roomId}
    </select>
    <select id="selectShareHouseByRoomId" resultType="com.kb.room.dto.response.detail.GosiwonInfoDTO" parameterType="Long">
