    <!-- 대출 종류 조회 -->
    <select id="selectLoansByRoomId" parameterType="long" resultType="String">
        SELECT l.LOAN
        FROM ROOM_LOAN r LEFT JOIN LOAN_TYPE l ON r.LOAN_ID = l.LOAN_ID
        WHERE ROOM_ID = #{roomId}
    </select>

    <!--  지도 기반 근처 고시원 조회  -->
    <select id="selectGosiwonsByLocation" resultType="com.kb.room.dto.response.map.GosiwonMapDTO">
        <![CDATA[
            SELECT g.*, r.*,
                   (6371 * acos(cos(radians(#{lat}))
                                    * cos(radians(r.room_lat))
                                    * cos(radians(r.room_long) - radians(#{lng}))
                       + sin(radians(#{lat}))
                                    * sin(radians(r.room_lat)))) AS distance
            FROM GOSIWON g JOIN ROOM r ON g.room_id = r.room_id
            WHERE 1 = 1
            HAVING distance < 2
            ORDER BY distance;
        ]]>
    </select>

    <!--  지도 기반 근처 원투룸 조회  -->
    <select id="selectOnetwoRoomsByLocation" resultType="com.kb.room.dto.response.map.OnetwoRoomMapDTO">
        <![CDATA[
            SELECT o.*, r.*,
                   (6371 * acos(cos(radians(#{lat}))
                                    * cos(radians(r.room_lat))
                                    * cos(radians(r.room_long) - radians(#{lng}))
                       + sin(radians(#{lat}))
                                    * sin(radians(r.room_lat)))) AS distance
            FROM ONETWOROOM o JOIN ROOM r ON o.room_id = r.room_id
            WHERE 1 = 1
            HAVING distance < 1
            ORDER BY distance;
        ]]>
    </select>

    <!--  지도 기반 근처 공유주거 조회  -->
    <select id="selectShareHousesByLocation" resultType="com.kb.room.dto.response.map.ShareHouseMapDTO">
        <![CDATA[
            SELECT s.*, r.*,
                   (6371 * acos(cos(radians(#{lat}))
                                    * cos(radians(r.room_lat))
                                    * cos(radians(r.room_long) - radians(#{lng}))
                       + sin(radians(#{lat}))
                                    * sin(radians(r.room_lat)))) AS distance
            FROM SHAREHOUSE s JOIN ROOM r ON s.room_id = r.room_id
            WHERE 1 = 1
            HAVING distance < 2
            ORDER BY distance;
        ]]>
    </select>

    <!--  매물 유형 확인  -->
    <select id="selectRoomTypeByRoomId" resultType="java.lang.String" parameterType="Long">
        SELECT HOUSE_TYPE_CD FROM ROOM WHERE ROOM_ID = #{roomId}
    </select>

    <!--  매물 상세 정보 조회  -->
    <select id="selectGosiwonByRoomId" resultType="com.kb.room.dto.response.detail.info.GosiwonInfoDTO" parameterType="Long">
        SELECT r.*, g.*
        FROM ROOM r JOIN GOSIWON g
        ON r.ROOM_ID = g.ROOM_ID
        WHERE r.ROOM_ID = #{roomId}
    </select>
    <select id="selectShareHouseByRoomId" resultType="com.kb.room.dto.response.detail.info.ShareHouseInfoDTO" parameterType="Long">
        SELECT r.*, s.*
        FROM ROOM r JOIN SHAREHOUSE s
                         ON r.ROOM_ID = s.ROOM_ID
        WHERE r.ROOM_ID = #{roomId}
    </select>
    <select id="selectOnetwoRoomByRoomId" resultType="com.kb.room.dto.response.detail.info.OnetwoRoomInfoDTO" parameterType="Long">
        SELECT r.*, o.*
        FROM ROOM r JOIN ONETWOROOM o
                         ON r.ROOM_ID = o.ROOM_ID
        WHERE r.ROOM_ID = #{roomId}
    </select>

    <!--  관심매물 개수 카운트  -->
    <select id="getInterestedCountByRoomId" resultType="java.lang.Integer">
        SELECT count(*) FROM INTEREST_ROOM WHERE ROOM_ID = #{roomId}
    </select>

    <!--  로그인한 유저의 해당 매물에 대한 관심매물 확인  -->
    <select id="checkInterestedByRoomIdAndUserId" resultType="java.lang.Boolean">
        SELECT EXISTS(
            SELECT 1 FROM INTEREST_ROOM WHERE USER_ID = #{userId} AND ROOM_ID = #{roomId}
        )
    </select>

    <!--  관심매물 등록  -->
    <insert id="insertInterest">
        INSERT INTO INTEREST_ROOM VALUES(default, #{userId}, #{roomId}, default)
    </insert>

    <!--  관심매물 삭제  -->
    <delete id="deleteInterest">
        DELETE FROM INTEREST_ROOM WHERE USER_ID = #{userId} AND ROOM_ID = #{roomId}
    </delete>

    <!--  모든 사용자 리뷰 조회  -->
    <select id="selectUserReviewsOfRoom" resultType="com.kb.room.dto.response.detail.review.UserReviewDTO" parameterType="Long">
        SELECT r.URV_ID urvId, r.ROOM_ID roomId, r.USER_ID userId, u.pic pic, u.NICKNAME nickname, r.CONTENT content, r.UPDATED_AT updatedAt, r.CREATED_AT createdAt
        FROM USER_REVIEW r JOIN USER u ON r.USER_ID = u.USER_ID
        WHERE r.ROOM_ID = #{roomId} AND r.IS_DELETED = false
    </select>

    <!-- 사용자 리뷰 작성 -->
    <insert id="insertUserReview" useGeneratedKeys="true"  keyProperty="urvId">
        INSERT INTO USER_REVIEW (ROOM_ID, USER_ID, CONTENT) VALUES (#{roomId}, #{userId}, #{content})
    </insert>

