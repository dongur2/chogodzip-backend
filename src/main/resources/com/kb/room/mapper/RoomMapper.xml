    <!--  부동산 작성 [ROOM]  -->
    <insert id="saveRoom" parameterType="com.kb.room.vo.Room" useGeneratedKeys="true" keyProperty="roomId">
        INSERT INTO ROOM
            (USER_ID, ROOM_LAT, ROOM_LONG, THUMBNAIL, ADDRESS, HOUSE_TYPE_CD, HOUSE_TYPE_NM, CAN_LOAN, POSTCODE,
             PRIVATE_FACILITIES, SERVICES, LANGUAGES, ETC, DESCRIPTION, PICS,
             PRICE_MIN, PRICE_MAX, DEPOSIT_MIN, DEPOSIT_MAX, MAINTENANCE_FEE, CONTRACT_MIN,
             FACILITY_HEATING, FACILITY_COOLING, FACILITY_LIFE, FACILITY_SECURITY,
             BUILDING_TYPE, CAN_PARKING, HAS_ELEVATOR,
             IS_SOLD_OUT,
             UPDATED_AT, CREATED_AT)
        VALUES
            (#{userId}, #{roomLat}, #{roomLong}, #{thumbnail}, #{address}, #{houseTypeCd}, #{houseTypeNm}, #{canLoan}, #{postcode},
             #{privateFacilities}, #{services}, #{languages}, #{etc}, #{description}, #{pics},
             #{priceMin}, #{priceMax}, #{depositMin}, #{depositMax}, #{maintenanceFee}, #{contractMin},
             #{facilityHeating}, #{facilityCooling}, #{facilityLife}, #{facilitySecurity},
             #{buildingType}, #{canParking}, #{hasElevator},
             #{isSoldOut},
             NOW(), NOW())

        <selectKey keyProperty="roomId" resultType="long" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <!--  고시원 작성  -->
    <insert id="saveGosiwon" parameterType="com.kb.room.vo.Gosiwon" useGeneratedKeys="true" keyProperty="gswId">
        <![CDATA[
            INSERT INTO GOSIWON (ROOM_ID, TITLE, GENDER_LIMIT, AGE_MAX, AGE_MIN)
            VALUES (#{room.roomId}, #{title}, #{genderLimit}, #{ageMax}, #{ageMin})
        ]]>
    </insert>

    <!--  원/투룸 작성  -->
    <insert id="saveOneTwoRoom" parameterType="com.kb.room.vo.OnetwoRoom" useGeneratedKeys="true" keyProperty="gswId">
        <![CDATA[
        INSERT INTO ONETWOROOM (ROOM_ID, DETAIL_NAME, ROOM_TYPE)
        VALUES (#{room.roomId}, #{detailName}, #{roomType})
        ]]>
    </insert>

    <!--  쉐어하우스 작성  -->
    <insert id="saveShareHouse" parameterType="com.kb.room.vo.ShareHouse" useGeneratedKeys="true" keyProperty="gswId">
        <![CDATA[
        INSERT INTO SHAREHOUSE (ROOM_ID, TITLE, GENDER_LIMIT, AGE_MAX, AGE_MIN, ACCOMO_CNT)
        VALUES (#{room.roomId}, #{title}, #{genderLimit}, #{ageMax}, #{ageMin}, #{accomoCnt})
        ]]>
    </insert>

    <!--  대출 가능할 경우 부동산과 대출 연결   -->
    <insert id="saveRoomWithLoan" parameterType="com.kb.room.vo.RoomWithLoan" useGeneratedKeys="true" keyProperty="roomLoanId">
        INSERT INTO ROOM_LOAN (ROOM_ID, LOAN_ID) VALUES (#{roomId}, #{loanId})
    </insert>

    <!--  해당하는 구의 매물별 최고가/최저가/평균가 계산  -->
    <select id="calculateGosiwonPricesOfGu" parameterType="string" resultType="com.kb.room.dto.response.detail.status.GuStatus">
        SELECT
            MAX(r.PRICE_MAX) AS maxPrice,
            AVG(r.PRICE_MAX) AS avgPrice,
            MIN(r.PRICE_MAX) AS minPrice
        FROM GOSIWON g INNER JOIN ROOM r ON g.ROOM_ID = r.ROOM_ID
        WHERE r.ADDRESS IS NOT NULL AND r.ADDRESS LIKE CONCAT('%', #{gu}, '%');
    </select>

    <select id="calculateShareHousePricesOfGu" parameterType="string" resultType="com.kb.room.dto.response.detail.status.GuStatus">
        SELECT
            MAX(r.PRICE_MAX) AS maxPrice,
            AVG(r.PRICE_MAX) AS avgPrice,
            MIN(r.PRICE_MAX) AS minPrice
        FROM SHAREHOUSE s INNER JOIN ROOM r ON s.ROOM_ID = r.ROOM_ID
        WHERE r.ADDRESS IS NOT NULL AND r.ADDRESS LIKE CONCAT('%', #{gu}, '%');
    </select>

    <select id="calculateOnetwoRoomPricesOfGu" parameterType="string" resultType="com.kb.room.dto.response.detail.status.GuStatus">
        SELECT
            MAX(r.PRICE_MAX) AS maxPrice,
            AVG(r.PRICE_MAX) AS avgPrice,
