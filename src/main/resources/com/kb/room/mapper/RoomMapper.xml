    <!-- 대출 종류 조회 -->
    <select id="selectLoansByRoomId" parameterType="long" resultType="String">
        SELECT l.LOAN
        FROM ROOM_WITH_LOAN r LEFT JOIN LOAN_TYPE l ON r.LOAN_ID = l.LOAN_ID
        WHERE ROOM_ID = #{roomId}
    </select>

    <!--  지도 기반 근처 고시원 조회  -->
    <select id="selectGosiwonsByLocation" resultType="com.kb.room.dto.response.map.GosiwonMapDTO">
        <![CDATA[
            SELECT g.*, r.*,
                   (6371 * acos(cos(radians(#{lat}))
                                    * cos(radians(r.room_lat))
                                    * cos(radians(r.room_long) - radians(#{lng}))
                       + sin(radians(#{lat}))
                                    * sin(radians(r.room_lat)))) AS distance
            FROM GOSIWON g JOIN ROOM r ON g.room_id = r.room_id
            WHERE 1 = 1
            HAVING distance < 2
            ORDER BY distance;
        ]]>
    </select>

    <!--  지도 기반 근처 원투룸 조회  -->
    <select id="selectOnetwoRoomsByLocation" resultType="com.kb.room.dto.response.map.OnetwoRoomMapDTO">
        <![CDATA[
            SELECT o.*, r.*,
                   (6371 * acos(cos(radians(#{lat}))
                                    * cos(radians(r.room_lat))
                                    * cos(radians(r.room_long) - radians(#{lng}))
                       + sin(radians(#{lat}))
                                    * sin(radians(r.room_lat)))) AS distance
            FROM ONETWOROOM o JOIN ROOM r ON o.room_id = r.room_id
            WHERE 1 = 1
            HAVING distance < 1
            ORDER BY distance;
        ]]>
    </select>

    <!--  지도 기반 근처 공유주거 조회  -->
    <select id="selectShareHousesByLocation" resultType="com.kb.room.dto.response.map.ShareHouseMapDTO">
        <![CDATA[
            SELECT s.*, r.*,
                   (6371 * acos(cos(radians(#{lat}))
                                    * cos(radians(r.room_lat))
                                    * cos(radians(r.room_long) - radians(#{lng}))
                       + sin(radians(#{lat}))
                                    * sin(radians(r.room_lat)))) AS distance
            FROM SHAREHOUSE s JOIN ROOM r ON s.room_id = r.room_id
            WHERE 1 = 1
            HAVING distance < 2
            ORDER BY distance;
        ]]>
    </select>

    <!--  매물 유형 확인  -->
    <select id="selectRoomTypeByRoomId" resultType="java.lang.String" parameterType="Long">
